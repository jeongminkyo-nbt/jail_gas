<h1>설정 수정</h1>
<%= form_for :config do |f| %>
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p class="notice"><%= message %></p>
    </div>
  <% end %>
  <table class="table table-hover no-more-tables" style="margin-top: 20px;">
    <thead>
    <tr>
      <th class="h-align">품목</th>
      <th class="h-align">가격</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>10kg</td>
      <td><%= f.text_field :gas_10kg %></td>
    </tr>
    <tr>
      <td>20kg</td>
      <td><%= f.text_field :gas_20kg %></td>
    </tr>
    <tr>
      <td>50kg</td>
      <td><%= f.text_field :gas_50kg %></td>
    </tr>
    <tr>
      <td>산소</td>
      <td><%= f.text_field :air %></td>
    </tr>
    <tr>
      <td>부탄</td>
      <td><%= f.text_field :butane %></td>
    </tr>
    <tr>
      <td>아르곤</td>
      <td><%= f.text_field :argon %></td>
    </tr>
    <tr>
      <td>가스 기화기 부담금</td>
      <td><%= f.text_field :share %></td>
    </tr>
    <tr>
      <td>사택 단가</td>
      <td><%= f.text_field :per_money %></td>
    </tr>

    </tbody>
  </table>

  <br>
  <%= f.button :submit, class: 'btn-sm'%>

<% end %>




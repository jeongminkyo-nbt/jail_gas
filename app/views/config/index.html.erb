<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<h1>수금관리</h1>
<br>
<div class="grid simple">
  <div class="grid-body">
    <br>
      <table class="table table-hover no-more-tables" style="margin-top: 20px;">
        <thead>
        <tr>
          <th class="h-align">품목</th>
          <th class="h-align">가격</th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <td>10kg</td>
            <td><%= number_with_delimiter(@config.gas_10kg) %></td>
          </tr>
          <tr>
            <td>20kg</td>
            <td><%= number_with_delimiter(@config.gas_20kg) %></td>
          </tr>
          <tr>
            <td>50kg</td>
            <td><%= number_with_delimiter(@config.gas_50kg) %></td>
          </tr>
          <tr>
            <td>산소</td>
            <td><%= number_with_delimiter(@config.air) %></td>
          </tr>
          <tr>
            <td>부탄</td>
            <td><%= number_with_delimiter(@config.butane) %></td>
          </tr>
          <tr>
            <td>아르곤</td>
            <td><%= number_with_delimiter(@config.argon) %></td>
          </tr>
          <tr>
            <td>변경 날짜</td>
            <td><%= @config.updated_at%></td>
          </tr>
        </tbody>
      </table>

      <br>
          <button class="btn-sm">
            <%= link_to '수정', edit_config_path %>
          </button>
  </div>
</div>

<script>
    $(document).ready(function () {
        $(".config").addClass("active");
    })



</script>